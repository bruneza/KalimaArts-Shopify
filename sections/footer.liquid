{% include 'footer-snippet' %}

{% schema %}
  {
    "name": "Footer",
	  "max_blocks": 6,
    "settings": [
      {
        "type": "select",
        "id": "layout",
        "label": "Section Layout Mode",
        "default": "full",
        "options": [
          { "value": "boxed", "label": "Boxed" },
          { "value": "full", "label": "Wide" }
        ]
      },
      {
        "type": "header",
        "content": "Newsletter Widget"
      },
      {
        "type": "select",
        "id": "email_type",
        "label": "Automated Email Marketing",
        "default": "mailchimp",
        "options": [
          { "value": "klaviyo", "label": "Klaviyo" },
          { "value": "mailchimp", "label": "MailChimp" },
          { "value": "newsletter-shopify", "label": "Shopify" },
          { "value": "none", "label": "None" }
        ]
      },
      {
        "type": "checkbox",
        "id": "fix_layout",
        "label": "Fix layout"
      },
      {
        "type": "text",
        "id": "mailing_title",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "mailing_caption",
        "label": "Caption"
      },
      {
        "type": "textarea",
        "id": "mailing_form_action",
        "label": "Newsletter Form Action"
      },
      {
        "type":"paragraph",
        "content":"Mailchimp: [Where do I get my MailChimp Form Action](https:\/\/www.arenacommerce.com\/blogs\/faq\/shopify-theme-how-to-get-a-mailchimp-form-action-url)"
      },
      {
        "type":"paragraph",
        "content":"KLAVIYO: [Sign up](https:\/\/www.klaviyo.com\/partner\/signup?utm_source=0010V00002PVTlf&utm_medium=partner)"
      },
      {
        "type": "text",
        "id": "mailing_text_placeholder",
        "label": "Text placeholder",
        "default": "Enter your email address"
      },
      {
        "type": "textarea",
        "id": "mailing_button_text",
        "label": "Button label",
        "default": "Subscribe"
      },
      {
        "type": "header",
        "content": "Payment icons"
      },
      {
        "type": "select",
        "id": "payment_icon_type",
        "label": "Select a component",
        "default": "image",
        "options": [
          { "value": "image", "label": "Image" },
          { "value": "icon", "label": "Icon" },
          { "value": "none", "label": "None" }
        ]
      },
      {
        "type": "image_picker",
        "id": "payment_image",
        "label": "Payment image"
      },
      {
        "type": "text",
        "id": "payment_image_width",
        "label": "Custom Payment image width (in pixels)",
        "default": "325"
      },
      {
        "type": "text",
        "id": "payment_icon_1",
        "label": "SVG icon"
      },
      {
        "type": "text",
        "id": "payment_icon_title_1",
        "label": "SVG icon title 01",
        "default": "Visa"
      },
      {
        "type": "text",
        "id": "payment_icon_2",
        "label": "SVG icon"
      },
      {
        "type": "text",
        "id": "payment_icon_title_2",
        "label": "SVG icon title 02",
        "default": "PayPal"
      },
      {
        "type": "text",
        "id": "payment_icon_3",
        "label": "SVG icon"
      },
      {
        "type": "text",
        "id": "payment_icon_title_3",
        "label": "SVG icon title 03",
        "default": "Discover"
      },
      {
        "type": "text",
        "id": "payment_icon_4",
        "label": "SVG icon"
      },
      {
        "type": "text",
        "id": "payment_icon_title_4",
        "label": "SVG icon title 04",
        "default": "American express"
      }
    ],
    "blocks": [
      {
        "type": "logo",
        "name": "Logo",
        "limit": 1,
        "settings": [
          {
            "type": "range",
            "id": "width",
            "label": "Column width",
            "min": 1,
            "max": 12,
            "step": 1,
            "default": 4,
            "unit": "/12"
          },
          {
            "type": "checkbox",
            "id": "social_icon",
            "label": "Social icons",
            "default": true,
            "info": "Use settings in Icon > Social icon 01, Social icon 02, Social icon 03, Social icon 04, etc."
          },
          {
            "type": "header",
            "content": "Logo image"
          },
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "logo_max_width",
            "label": "Custom logo width (in pixels)",
            "default": "150"
          },
          {
            "type": "textarea",
            "id": "logo_svg",
            "label": "SVG"
          },
          {
            "type": "header",
            "content": "Phone number box"
          },
          {
            "type": "checkbox",
            "id": "show_phone_number_box",
            "label": "Show phone number box",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "phone_number_box_icon",
            "label": "Show icon",
            "default": true
          },
          {
            "type": "text",
            "id": "phone_number_box_text_1",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "phone_number_box_text_2",
            "label": "Phone number"
          },
          {
            "type": "header",
            "content": "Address box"
          },
          {
            "type": "checkbox",
            "id": "show_address_box",
            "label": "Show address box",
            "default": true
          },
          {
            "type": "text",
            "id": "address_box_text_1",
            "label": "Text"
          },
          {
            "type": "textarea",
            "id": "address_box_text_2",
            "label": "Address"
          }
        ]
      },
      {
        "type": "menu",
        "name": "Menu item",
        "settings": [
          {
            "type": "range",
            "id": "width",
            "label": "Column width",
            "min": 1,
            "max": 12,
            "step": 1,
            "default": 2,
            "unit": "/12"
          },
          {
            "type": "text",
            "id": "footer_menu_title",
            "label": "Heading",
            "default": "Information"
          },
          {
            "type": "checkbox",
            "id": "hide_footer_menu_title",
            "label": "Hide Heading on Desktop"
          },
          {
            "type": "link_list",
            "id": "footer_menu",
            "label": "Menu item"
          }
        ]
      }
    ]
  }
{% endschema %}